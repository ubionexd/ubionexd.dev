---
import HeaderLink from './HeaderLink.astro';

export interface Props {
	page: String;
}

const { page = "unknown" } = Astro.props;
const arrow = ">";
---
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet"> 

<header>
	<h2 class="font-FiraCode">ubionexd {arrow} {page}</h2>
	<nav class="p-2 bg-[#3273dc] rounded-md">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/ubinull">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/ubionexd">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>