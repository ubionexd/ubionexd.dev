---
import HeaderLink from './HeaderLink.astro'

export interface Props {
	page: String,
	post?: Boolean
}

const { page = 'unknown', post = false } = Astro.props

let text

if (post == true) {
	text = "> blog >"
} else {
	text = ">"
}
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap"
	rel="stylesheet"
/>

<head>
	<title>ubionexd - {page}</title>
</head>

<header class="mb-8 cursor-default select-none">
	<h2 class="font-FiraCode m-2 ml-0">ubionexd {text} {page}</h2>
	<nav class="p-2 bg-[#3273dc] rounded-md">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<div class="float-right">
			<HeaderLink rel="me" href="https://floss.social/@ubinull">Mastodon</HeaderLink>
			<HeaderLink href="https://github.com/ubionexd">GitHub</HeaderLink>
		</div>
	</nav>
</header>
