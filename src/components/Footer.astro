---
import Link from './Link.astro'

const today = new Date()
---

<footer class="select-none cursor-default">
  <p>
    <Link display={'ubionexd.vercel.app'} url={'https://ubionexd.vercel.app'} />
    and it's <Link
      display={'source code'}
      url={'https://github.com/ubionexd/ubionexd.dev/tree/astro-rewrite'}
    /> is licensed under <a href="/LICENSE.txt"
      ><img class="inline" src="/CC-BY-NC.svg" alt="CC BY-NC 4.0" width="83" />
    </a>
  </p>
  <br />
  <div>
    <ul class="text-center">
      <li class="inline">
        <a
          href="https://github.com/ubionexd"
          target="_blank"
          class="p-3 rounded-md hover:bg-gray-500"
          ><img
            class="inline invert"
            src="/icons/github.svg"
            width="24"
            height="24"
            alt="GitHub"
          />
        </a>
      </li>
      <li class="inline">
        <a
          href="https://gitlab.com/ubinull"
          target="_blank"
          class="p-3 rounded-md hover:bg-gray-500"
          ><img
            class="inline invert"
            src="/icons/gitlab.svg"
            width="24"
            height="24"
            alt="GitLab"
          />
        </a>
      </li>
      <li class="inline">
        <a
          href="https://twitter.com/ubinull"
          target="_blank"
          class="p-3 rounded-md hover:bg-gray-500"
          ><img
            class="inline invert"
            src="/icons/twitter.svg"
            width="24"
            height="24"
            alt="Twitter"
          />
        </a>
      </li>
      <li class="inline">
        <a
          href="https://ubionexd.vercel.app/rss.xml"
          target="_blank"
          class="p-3 rounded-md hover:bg-gray-500"
          ><img
            class="inline invert"
            src="/icons/rss.svg"
            width="24"
            height="24"
            alt="RSS"
          />
        </a>
      </li>
    </ul>
  </div>
</footer>
<style>
  footer {
    text-align: center;
    margin: 5vh;
  }
</style>
