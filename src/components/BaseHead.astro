---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';

export interface Props {
	title: string;
	description: string;
	image?: string;
}

const { image = '/placeholder-social.jpg' } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" href="/favicon.png" />
<meta name="generator" content={Astro.generator} />

<!-- Primary Meta Tags -->
<meta name="title" content="ubionexd" />
<meta name="description" content="ubionexd blog and portfolio" />

<!-- OpenGraph Meta Tags -->
<meta property="og:type" content="website">
<meta property="og:title" content="ubionexd" />
<meta property="og:description" content="ubionexd blog and portfolio" />
<meta property="og:url" content="https://ubionexd.vercel.app" />
<meta property="og:image" content="/favicon.png" />

<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#18B572" />
<meta name="msapplication-TileColor" content="#18B572" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content="ubionexd" />
<meta property="twitter:description" content="ubionexd blog and portfolio" />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
